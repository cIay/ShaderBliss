{
  "manifest_version": 2,

  "name": "ShaderBliss",

  "version": "1.0",

  "description": "Apply fragment shaders to web videos and images.",

  "icons": {
    "16": "images/icon16-3.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "images/close16.png",
    "images/rec64.png"
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}